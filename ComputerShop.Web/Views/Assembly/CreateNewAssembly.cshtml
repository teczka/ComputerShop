@model ComputerShop.Web.Models.AssemblyViewModels.CreateNewAssemblyViewModel
@{
    ViewBag.Title = "CreateNewAssembly";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <br />
            <div class="btn-group-vertical">
                <a href="#" class="btn btn-default">Zapisz konfigurację</a>
                <a href="#" class="btn btn-default">Pokaż zapisane konfiguracje</a>
                <a href="#" class="btn btn-default">Pokaż konfiguracje innych użytkowników</a>
            </div>
        </div>
        <div class="col-sm-6">
            <h4>Wybierz element zestawu</h4>
            <p><b>Elementy wymagane</b></p>
            @foreach (var item in Model.Categories)
            {
                if (item.IsRequiredToAssembly == true)
                {
                    <a href="@Url.Action("MatchProductToAssembly", "Assembly", new { userId = WebSecurity.CurrentUserId, categoryId = item.Id })" class="btn btn-default">@item.CategoryName</a>
                    <div class="panel panel-primary">@Model.CurrentAssembly.Products.Where(p=>p.Category.CategoryName == item.CategoryName).Select(p=>p.Name)</div>
                }
            }
            <p><b>Elementy opcjonalne</b></p>
            @foreach (var item in Model.Categories)
            {
                if (item.IsRequiredToAssembly == false)
                {
                    <a href="#" class="btn btn-default">@item.CategoryName</a>
                    <div class="panel panel-primary">Tu będą wybrane produkty</div>
                    <br />
                }
            }
        </div>
    </div>
</div>

