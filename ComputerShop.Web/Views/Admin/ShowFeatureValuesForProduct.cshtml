@model IEnumerable<ComputerShop.Core.Domain.FeatureValueForProduct>
@{
    ViewBag.Title = "ShowFeatureValuesForProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
            <br />
            @foreach (var item in Model)
            {
                <div class="panel panel-info">
                    <div class="panel-heading">@item.FeatureValue.Feature.Name</div>
                    <div class="panel-body">@item.FeatureValue.Name</div>
                </div>
            }
        </div>
    </div>
</div>

