@model ComputerShop.Web.Models.AdminViewModels.AddNewFeatureViewModel
@{
    ViewBag.Title = "AddNewFeature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">

    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4">
                <h2>Dodaj nową cechę produktu</h2>
                <div class="form-group">
                    <label for="login">Podaj nazwę nowej cechy produktu</label><br />
                    <input name="featureName" type="text" class="form-control" value="@Model.FeatureName" />
                    <label for="IsAssembly">Czy cecha ważna dla montażu?</label>
                    @Html.CheckBoxFor(m => m.IsAssembly)
                </div>
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </div>
    }
</div>

