@model IEnumerable<ComputerShop.Core.Domain.Product>
@{
    ViewBag.Title = "ProductsPanel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <h3>Zarządzanie produktami</h3>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Kategoria</th>
                        <th>Nazwa</th>
                        <th>Producent</th>
                        <th>Cena</th>
                        <th>Opcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.Category.CategoryName</th>
                            <th>@item.Name</th>
                            <th>@item.Producent.Name</th>
                            <th>@item.Price</th>
                            <th>
                                <div class="btn-group">
                                    @Html.ActionLink("Pokaż cechy", "ShowFeatureValuesForProduct", "Admin", new { productId = item.Id }, new { @class = "btn btn-success" })
                                    @Html.ActionLink("Dodaj cechy", "AddFeatureValuesToProduct", "Admin", new { productId = item.Id }, new { @class = "btn btn-info" })
                                    @Html.ActionLink("Edytuj", "EditProduct", "Admin", new { productId = item.Id }, new { @class = "btn btn-warning" })
                                    @Html.ActionLink("Usuń", "DeleteProduct", "Admin", new { productId = item.Id }, new { @class = "btn btn-danger" })
                                </div>
                            </th>
                    </tr>
                    }
                </tbody>
            </table>
            <a href="@Url.Action("AddNewProduct", "Admin")" class="btn btn-primary" role="button">Dodaj nowy produkt</a>
        </div>
    </div>
</div>

