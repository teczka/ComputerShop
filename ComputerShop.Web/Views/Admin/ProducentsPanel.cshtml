@model IEnumerable<ComputerShop.Core.Domain.Producent>
@{
    ViewBag.Title = "ProducentsPanel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <h2>Zarządzanie producentami</h2>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nazwa producenta</th>
                        <th>Opcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.Name</th>
                            <th>
                                @Html.ActionLink("Edytuj", "EditProducent", "Admin", new { producentId = item.Id }, new { @class = "btn btn-warning" })
                            @Html.ActionLink("Usuń", "DeleteProducent", "Admin", new { producentId = item.Id }, new { @class = "btn btn-danger" })
                        </th>
                    </tr>
                    }
                </tbody>
            </table>
            <a href="@Url.Action("AddNewProducent", "Admin")" class="btn btn-primary" role="button">Dodaj nowego producenta</a>
        </div>
    </div>
</div>

