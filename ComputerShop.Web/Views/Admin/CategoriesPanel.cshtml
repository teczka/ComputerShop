@model IEnumerable<ComputerShop.Core.Domain.Category>
@{
    ViewBag.Title = "CategoriesPanel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-10">
            <h2>Zarządzanie kategoriami</h2>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nazwa kategorii</th>
                        <th>Przypisana do grupy</th>
                        <th>Kategoria montażowa</th>
                        <th>Opcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.CategoryName</th>
                            <th>@item.Group.GroupName</th>
                            <th>@item.IsAssemblyCategory</th>
                            <th>
                                <div class="btn-group">
                                    @Html.ActionLink("Dołącz cechy", "ConnectFeaturesToCategory", "Admin", new { categoryId = item.Id } , new { @class = "btn btn-info" })
                                    @Html.ActionLink("Edytuj", "EditCategory", "Admin", new { categoryId = item.Id }, new { @class = "btn btn-warning" })
                                    @Html.ActionLink("Usuń", "DeleteCategory", "Admin", new { categoryId = item.Id }, new { @class = "btn btn-danger" })
                                </div>      
                        </th>
                    </tr>
                    }
                </tbody>
            </table>
            <a href="@Url.Action("AddNewCategory", "Admin")" class="btn btn-primary" role="button">Dodaj nową kategorię</a>
        </div>
    </div>
</div>

