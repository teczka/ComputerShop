@model ComputerShop.Web.Models.AdminViewModels.EditGroupViewModel
@{
    ViewBag.Title = "EditGroup";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">

    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4">
                <h2>Edytuj nazwę grupy</h2>
                <div class="form-group">
                    <label for="login">Podaj nazwę nowej grupy</label><br />
                    <input name="groupName" type="text" class="form-control" value="@Model.GroupName" />
                    <input class="hidden" name="Id" value="@Model.Id" /> 
                </div>
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </div>
    }
</div>
